<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://projectDocumentBrowse.caption"
        focusComponent="projectDocumentsTable">
    <data readOnly="true">
        <collection id="projectDocumentsDc"
                    class="com.company.jmixpm.entity.ProjectDocument">
            <fetchPlan extends="_base">
                <property name="project" fetchPlan="_base">
                    <property name="manager" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="projectDocumentsDl">
                <query>
                    <![CDATA[select e from ProjectDocument e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="projectDocumentsTable" spacing="true">
        <filter id="filter"
                dataLoader="projectDocumentsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="projectDocumentsTable"
                    width="100%"
                    dataContainer="projectDocumentsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="project"/>
                <column id="project.manager"/>
                <column id="file"/>
                <column id="notes"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="projectDocumentsTable.create"/>
                <button id="editBtn" action="projectDocumentsTable.edit"/>
                <button id="removeBtn" action="projectDocumentsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
